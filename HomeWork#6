namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            int playerCountCristals = 0;
            Console.WriteLine("сколько у игрока золота?");
            int playerCountGolds = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("сколько вы хотите купить кристалов");
            int playerBuyCristals = Convert.ToInt32(Console.ReadLine());
            int priceCristal = 5;
            playerCountCristals = playerBuyCristals;
            playerCountGolds = playerCountGolds - (priceCristal * playerCountCristals);
            Console.WriteLine($"вы можете купить столько кристалов {playerCountCristals} и у вас останется {playerCountGolds} золота");
        }
    }
}
