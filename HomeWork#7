namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            int hours;
            int minutes;
            int minutsOnHour = 60;
            int timeReception = 10;
            Console.WriteLine("сколько бабок в очереди?");
            int countObstacls = Convert.ToInt32(Console.ReadLine());
            hours = timeReception * countObstacls / minutsOnHour;
            minutes = timeReception * countObstacls % minutsOnHour;
            Console.WriteLine($"вам придется ждать:{hours}ч {minutes}мин.");
        }
    }
}
