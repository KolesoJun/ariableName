static void Main(string[] args)
        {
            Random random = new Random();
            int numberLimit;
            int numbersSum = 0;
            numberLimit = random.Next(0, 101);
            Console.WriteLine("лимит: " + numberLimit);

            for (int i = 0; i < numberLimit; i++)
            {
                if (i % 3 ==0 || i % 5 == 0)
                {
                    Console.WriteLine("число = " + i);
                    numbersSum += i;
                    Console.WriteLine("сумма чисел на данный момент = " + numbersSum);
                }
            }

            Console.WriteLine("сумма чисел = " + numbersSum);
        } 
