static void Main(string[] args)
        {
            string input;
            string symbol;
            int symbolAngular = 2;
            int wordLength;
            int count = 0;
            bool isDone = true;

            Console.WriteLine("введите имя");
            input = Console.ReadLine();
            Console.WriteLine("введите символ");
            symbol = Console.ReadLine();
            wordLength = input.Length + symbolAngular;

            while (wordLength > count)
            {
                Console.Write(symbol);
                count++;
                
                if (wordLength == count && isDone)
                {
                    Console.WriteLine("");
                    Console.Write(symbol+input+symbol);
                    Console.WriteLine("");
                    count = 0;
                    isDone = false;
                }
            }
        }
